{
  "name": "tateti-arbitro",
  "version": "1.0.0",
  "description": "Arbitro para partidas de Ta-Te-Ti entre bots HTTP.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "test": "jest --runInBand",
    "test:unit": "jest --selectProjects backend-unit --maxWorkers=4",
    "test:integration": "jest --selectProjects backend-integration --maxWorkers=1",
    "test:client": "jest --selectProjects client --maxWorkers=2",
    "test:full": "npm run test:unit && npm run test:client",
    "test:watch": "jest --runInBand --watch",
    "test:all": "npm run test && npm run test:client",
    "lint": "eslint . --ext .js,.mjs --ignore-path .gitignore --ignore-pattern 'client/**'",
    "lint:client": "cd client && npm run lint",
    "prepare": "husky install || true",
    "qa:lint": "npm run lint && npm run lint:client",
    "qa:test": "npm run test:all",
    "qa:build": "npm run docker:build:all",
    "qa:full": "npm run qa:lint && npm run qa:test && npm run qa:build",
    "precommit": "npm run qa:lint && npm run test",
    "docker:build": "docker build -t tateti-arbitro:v1.0.0 .",
    "docker:build:frontend": "docker build -f Dockerfile.frontend -t tateti-interfaz:v1.0.0 .",
    "docker:build:all": "npm run docker:build && npm run docker:build:frontend",
    "docker:up": "docker-compose up --build",
    "docker:up:test": "docker-compose -f docker-compose.test.yml up --build",
    "docker:up:8player": "docker-compose -f docker-compose.8player.yml up --build",
    "docker:down": "docker-compose down",
    "docker:down:test": "docker-compose -f docker-compose.backend-test.yml down",
    "docker:down:8player": "docker-compose -f docker-compose.8player.yml down",
    "docker:clean": "docker system prune -f && docker volume prune -f",
    "dev:frontend": "cd client && npm run dev",
    "dev:backend": "docker-compose -f docker-compose.backend-test.yml up --build",
    "dev:backend:8player": "docker-compose -f docker-compose.8player.yml up --build",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:full:8player": "concurrently \"npm run dev:backend:8player\" \"npm run dev:frontend\""
  },
  "keywords": [
    "tateti",
    "tic-tac-toe",
    "arbitro"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "autocannon": "^7.12.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eventsource": "^2.0.2",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
