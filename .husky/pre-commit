echo "🔍 Ejecutando puertas de calidad pre-commit..."

# 1. Format check
npm run format:check || exit 1
cd client && npm run format:check || exit 1
cd ..

# 2. Lint check
npm run lint || exit 1
npm run lint:client || exit 1

# 3. Tests (all projects)
npm test -- --runInBand --passWithNoTests=false || exit 1

echo "✅ ¡Todas las puertas de calidad pasaron!"